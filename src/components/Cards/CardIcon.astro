---
import Card from "./Card.astro";
interface Props {
	colSpan: number;
	rowSpan: number;
    href: string;
    order: number;
	orderMobile: number;
}

const {colSpan, rowSpan, href, order, orderMobile } = Astro.props;

---
<Card colSpan={colSpan} rowSpan={rowSpan} order={order} orderMobile={orderMobile}>
    <a href={href} class="w-full h-full flex justify-center items-center relative cursor-pointer overflow-hidden whitespace-nowrap  ">
        <slot />
    </a>
</Card>



