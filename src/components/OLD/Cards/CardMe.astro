---
import Card from "./Card.astro";

interface Props {
	colSpan: number;
	rowSpan: number;
  order: number;
	orderMobile: number;
}

const {colSpan, rowSpan, order, orderMobile } = Astro.props;

---
<Card colSpan={colSpan} rowSpan={rowSpan} order={order} orderMobile={orderMobile}>
    <div class="w-full h-full flex justify-between px-20 items-center relative cursor-pointer overflow-hidden whitespace-nowrap">
        <div class="flex-shrink-0">
            <h2 class="text-black dark:text-white text-3xl xl:text-5xl font-bold pb-6">Ra√∫l Castro Moreno</h2>
            <p class="text-gray-600 text-xl xl:text-3xl">Software FullStack Developer</p>
          </div>
          <div class="flex-shrink-0">
            <img src="/raulFotoRecortada.jpg" alt="Tu Foto" class="w-[300px] h-[300px] xl:w-[400px] xl:h-[400px] rounded-3xl object-cover overflow-hidden">
          </div>
    </div>
</Card>